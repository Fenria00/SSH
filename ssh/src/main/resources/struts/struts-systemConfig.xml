<?xml version="1.0" encoding="UTF-8" ?>
<!DOCTYPE struts PUBLIC
    "-//Apache Software Foundation//DTD Struts Configuration 2.1//EN"
    "http://struts.apache.org/dtds/struts-2.1.dtd">
<struts>
	<package name="systemConfig" namespace="/" extends="crm-default">
	
		<action name="getSCPInitialData" class="ssh.action.systemConfig.SystemConfigAction" method="getSCPInitialData">
			<result type="json">	
                <param name="enableGZIP">true</param>
                <param name="noCache">true</param>
                <param name="ignoreHierarchy">false</param>
                <param name="callbackParameter">callback</param>
				<param name="includeProperties" >result,result.*</param>
			</result>
		</action>
		
		<action name="addCfgSystemConfig" class="ssh.action.systemConfig.SystemConfigAction" method="addCfgSystemConfig">
			<result type="json">	
                <param name="enableGZIP">true</param>
                <param name="noCache">true</param>
                <param name="ignoreHierarchy">false</param>
                <param name="callbackParameter">callback</param>
				<param name="includeProperties" >result,result.*</param>
			</result>
		</action>
		
    </package>
</struts>